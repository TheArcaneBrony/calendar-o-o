%footer.footer
  .container
    .d-flex.justify-content-between.align-items-center
      .copyright
        = t(:copyright)
      .text-muted.text-align-end
        = t(:timezone_notice_html, timezone: local_time(Time.zone.now, format: '%Z'))
      %ul.list-inline.mb-0
        %li.list-inline-item
          = link_to t(:source_code), 'https://github.com/openSUSE/calendar-o-o'
        %li.list-inline-item
          = link_to t(:license),
                    'https://github.com/openSUSE/calendar-o-o/blob/main/LICENSE'
